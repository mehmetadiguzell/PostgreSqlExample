@model List<PostgreSqlExample.Models.Student>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container m-5">
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Id</td>
                <td>FirstName</td>
                <td>LastName</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td><a asp-action="Update" asp-controller="Home" asp-route-Id="@item.Id" class="btn btn-warning">Update</a></td>
                    <td><a asp-action="Delete" asp-controller="Home" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Add" asp-controller="Home" class="btn btn-secondary">ADD</a>
</div>
